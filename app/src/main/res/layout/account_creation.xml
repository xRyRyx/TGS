<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:padding="30dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:text="Create Account"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/quicksand_semibold"
                android:text="Please enter your details"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/quicksand_semibold"
                android:text="House Number" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cursorColor="@color/green"
                app:boxStrokeColor="@color/green"
                android:layout_marginBottom="20dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/houseNumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Block 12 Lot 3 Phase 3"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/quicksand_semibold"
                android:text="Street Name" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cursorColor="@color/green"
                app:boxStrokeColor="@color/green"
                android:layout_marginBottom="20dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/streetName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Duhat Street"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/quicksand_semibold"
                android:text="Province" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cursorColor="@color/green"
                app:boxStrokeColor="@color/green"
                android:layout_marginBottom="20dp"
                app:hintEnabled="false"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/arrow_dropdown">

                <AutoCompleteTextView
                    android:id="@+id/provinceSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="18dp"
                    android:hint="Cavite"
                    android:inputType="none"
                    android:dropDownHeight="200dp"
                    android:background="@null"
                    android:textSize="16sp"
                    android:enabled="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/quicksand_semibold"
                android:text="City" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cursorColor="@color/green"
                app:boxStrokeColor="@color/green"
                android:layout_marginBottom="20dp"
                app:hintEnabled="false"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/arrow_dropdown">

                <AutoCompleteTextView
                    android:id="@+id/citySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="18dp"
                    android:hint="Bacoor"
                    android:inputType="none"
                    android:dropDownHeight="200dp"
                    android:background="@null"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/quicksand_semibold"
                android:text="Barangay" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cursorColor="@color/green"
                app:boxStrokeColor="@color/green"
                android:layout_marginBottom="20dp"
                app:hintEnabled="false"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/arrow_dropdown">

                <AutoCompleteTextView
                    android:id="@+id/barangaySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="18dp"
                    android:hint="Mambog 3"
                    android:inputType="none"
                    android:dropDownHeight="200dp"
                    android:background="@null"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                app:cornerRadius="5dp"
                android:backgroundTint="@color/green"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>