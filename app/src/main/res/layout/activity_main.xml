<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- AutoCompleteTextView for Province -->
    <AutoCompleteTextView
        android:id="@+id/provinceSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Province"
        android:dropDownHeight="200dp" />

    <!-- AutoCompleteTextView for City/Municipality -->
    <AutoCompleteTextView
        android:id="@+id/citySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select City/Municipality"
        android:dropDownHeight="200dp"
        android:enabled="false" />

    <!-- AutoCompleteTextView for Barangay -->
    <AutoCompleteTextView
        android:id="@+id/barangaySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Barangay"
        android:dropDownHeight="200dp"
        android:enabled="false" />

</LinearLayout>
